@model Y2S2_AppSecPracAssignment.Pages.EmailVerificationModel

<h2>Email Verification</h2>

<form method="post" asp-page-handler="Verify">
    <div>
        <label for="VerificationCode">Enter the 6-digit verification code sent to your email:</label>
        <input type="text" asp-for="VerificationCode" id="VerificationCode" required />
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div style="color:red;">
            @Model.ErrorMessage
        </div>
    }

    <button type="submit">Verify</button>
</form>
